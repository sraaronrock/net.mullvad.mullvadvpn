{
  "name": "Flatpak Builder - Mullvad VPN",
  "image": "ubuntu:22.04",
  "features": {
    "ghcr.io/devcontainers/features/flatpak:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-yaml",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-json"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Flathub Test Server"
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer,target=/workspace/.devcontainer,type=bind,consistency=cached"
  ]
}
